        for (int i = 0; i < 3 and pin != 1123; i++){
            
            std::cout << "PIN: ";
            std::cin >> pin;
            
            if (i == 2){
                std::cout << "You have 0 tries left.\n\n";
                
                std::cin >> c;
                std::cout << "\n";
                
                std::cout << "----ACCESS DENIED----\n\n";
                
